<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingTop="5dp" android:paddingBottom="5dp"
    android:background="@drawable/list_unipackback" android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ddddddddddddddddd"
        android:id="@+id/list_unipack_title"
        android:textSize="15dp"
        android:textColor="@color/title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="ddddddddddddddddd"
            android:textSize="10dp"
            android:textColor="@color/sub"
            android:layout_marginTop="7dp"
            android:id="@+id/list_unipack_producer"
            android:layout_marginLeft="5dp"
            android:gravity="bottom|left"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="ddddddddddddddddd"
            android:textColor="@color/sub"
            android:layout_marginTop="7dp"
            android:layout_marginRight="5dp"
            android:id="@+id/list_unipack_path"
            android:textSize="10dp"
            android:gravity="bottom|right"
            android:layout_weight="2"/>

    </LinearLayout>

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="0sp"
        android:id="@+id/list_unipack_chain"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="0sp"
        android:id="@+id/list_unipack_land"/>

</LinearLayout>